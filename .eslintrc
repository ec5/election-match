{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "lodash",
    "mocha",
    "react",
    "should-promised"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "root": true,
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle": 1,
    "dot-notation": 1,
    "id-length": 0,
    "jsx-quotes": 1,
    "key-spacing": 1,
    "max-len": [
      1,
      200
    ],
    "mocha/no-exclusive-tests": 2,
    "newline-per-chained-call": 0,
    "no-case-declarations": 0,
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-else-return": 1,
    "no-multi-spaces": 1,
    "no-param-reassign": 1,
    "no-trailing-spaces": 1,
    "no-unused-vars": 1,
    "object-curly-spacing": 0,
    "object-shorthand": 1,
    "prefer-template": 1,
    "quote-props": 1,
    "quotes": 1,
    "react/jsx-boolean-value": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-no-bind": 1,
    "react/jsx-space-before-closing": 1,
    "react/no-multi-comp": 0,
    "react/prefer-stateless-function": 1,
    "react/prop-types": 0,
    "semi": [
      2,
      "never"
    ],
    "should-promised/return-promise": 2,
    "space-before-function-paren": 0,
    "space-in-parens": 1,
    "space-infix-ops": 1,
    "no-underscore-dangle": 0,
    "global-require": 1,
    "react/jsx-first-prop-new-line": 1,
    "react/jsx-curly-spacing": 1,
    "react/jsx-indent": [1, 2],
    "react/require-render-return": 1
  }
}
